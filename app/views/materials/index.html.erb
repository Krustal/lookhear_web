<h1>Listing materials</h1>

<table>
  <tr>
    <th>Title</th>
    <th>File</th>
    <th>Type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @materials.each do |material| %>
  <tr>
    <td><%= material.title %></td>
    <td><%= material.file %></td>
    <td><%= material.file_type %></td>
    <td><%= link_to 'Show', tour_material_path(material.tour, material) %></td>
    <td><%= link_to 'Edit', edit_tour_material_path(@tour, material) %></td>
    <td><%= link_to 'Destroy', material, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

